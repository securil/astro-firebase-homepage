---
// src/layouts/MainLayout.astro
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const { title, description, currentPage = 'home' } = Astro.props;
---

<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title || '청구회 - 골프모임'}</title>
  <meta name="description" content={description || "청구회 골프 동호회 - 함께하는 골프, 함께하는 열정"}>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="min-h-screen flex flex-col bg-gray-50">
  <Header currentPage={currentPage} />
  
  <main class="flex-grow">
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
      <slot />
    </div>
  </main>
  
  <Footer />
</body>
</html>
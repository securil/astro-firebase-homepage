---
// src/pages/index.astro
import MainLayout from '../layouts/MainLayout.astro';
import Banner from '../components/Banner.astro';
import IntroSection from '../components/IntroSection.astro';
import VideoSection from '../components/VideoSection.astro';
import GallerySection from '../components/GallerySection.astro';
import UpcomingMeetings from '../components/UpcomingMeetings.astro';
import RecentAwards from '../components/RecentAwards.astro';
---

<MainLayout title="청구회 - 골프모임" currentPage="home">
  <Banner 
    title="청구회에 오신 것을 환영합니다" 
    subtitle="함께하는 골프, 함께하는 열정" 
    btnText="더 알아보기" 
    btnUrl={`${import.meta.env.BASE_URL}about`}
  />
  
  <IntroSection />
  
  <VideoSection />
  
  <GallerySection />
  
  <UpcomingMeetings />
  
  <RecentAwards />
</MainLayout>